<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <!-- Appenders -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d %5p [%c] %m%n</Pattern>
        </encoder>
    </appender>

    <appender name="console-infolog" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d %5p %m%n</Pattern>
        </encoder>
    </appender>

    <!--Log4jdbc-->
    <logger name="com.board" level="DEBUG" appender-ref="console" />
    <logger name="java.sql" level="INFO" appender-ref="console" />
    <logger name="jdbc.resultsettable" level="ON" appender-ref="console-infolog"/>

    <logger name="jdbc" level="OFF"/>
    <logger name="jdbc.connection" level="ON"/>
    <logger name="jdbc.sqlonly" level="OFF"/>
    <logger name="jdbc.sqltiming" level="DEBUG" additivity="false">
        <appender-ref ref="DATABASE_FILE_APPENDER"/>
    </logger>
    <logger name="jdbc.resultset" level="OFF"/>

</configuration>
